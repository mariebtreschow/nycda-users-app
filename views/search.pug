	body
		include navbar


		form(action="/search" method="POST")
			.row
				.container-fluid
					.col-xs-4
					.col-xs-4
						.form-group
							h1 Search for users on this page:
							label(for='username') Username:
							input#username.form-control(name="query" type='user', aria-describedby='search', placeholder='Search user')
							br
							button.btn.btn-success(type='submit') Search
